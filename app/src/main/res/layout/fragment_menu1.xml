<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/bg_toolbar"
        android:orientation="horizontal">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_selector"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            app:tabBackground="@color/bg_toolbar"
            app:tabIndicatorColor="@color/mainTable_tabIndicatorColor"
            app:tabIndicatorHeight="4dp"
            app:tabSelectedTextColor="@color/mainTable_selectedTextColor"
            app:tabTextColor="@color/mainTable_textColor"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
            android:layout_marginRight="43dp"/>
        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/icon_search_small"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
