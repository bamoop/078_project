<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/function_mid_btn" layout="@layout/function_mid_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/VideoList_linearBgColor" />

    <TextView
        android:id="@+id/tv_videoState_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/videoList_Item_paddingLeft"
        android:text="详情详情详情详情详情详情详情详情详情详情\n详情详情详情详情"
        android:textColor="@color/videoList_textColor"
        android:textSize="@dimen/videoList_Item_tv_count_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#tag1"
            android:textColor="@color/videoList_Tag_textColor"
            android:textSize="@dimen/videoList_Item_tv_count_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10.3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pingCount2_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部99条评论"
            android:textSize="@dimen/videoList_Item_tv_count_size" />
    </LinearLayout>


</LinearLayout>